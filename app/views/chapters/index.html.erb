<div class="col-6 timeline-container">
  <div class="timeline-header">
    <h2 class="timeline-header__title"><%= @shrine.first_name %> <%= @shrine.family_name %>'s Timeline</h2>
  </div>

  <div class= "timeline">
    <% @orderedchapters.each do |chapter| %>
      <div class="timeline-item">

        <div class="timeline-image">
          <div class="filter"></div>
          <%= cl_image_tag chapter.photo.key %>
        </div>

        <div class="timeline_content">
          <h3 class="timeline_content-title"><%= chapter.date_start.strftime("%e %B %Y") %></h3>
          <h3 class="timeline_content-title">to</h3>
          <h3 class="timeline_content-title"><%= chapter.date_end.strftime("%e %B %Y") %></h3>
          <p class="timeline_content-desc"><%= link_to chapter.title, chapter_path(chapter) %></p>
        </div>

      </div>
    <% end %>
  </div>
</div>

<%= link_to "Create a new Chapter", new_shrine_chapter_path(@shrine) %>
