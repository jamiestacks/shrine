<h1>Edit Chapter</h1>
<%= simple_form_for(@chapter) do |f| %>
  <%= f.input :title %>
  <%= f.input :date_start, label: "Start Date", as: :string, input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :date_end, label: "End Date", as: :string, input_html: { data: { controller: "datepicker" } } %>
  <%= f.submit "Edit Chapter", class: "btn btn-primary" %>
<% end %>
