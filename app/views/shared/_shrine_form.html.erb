<%= simple_form_for shrine do |f| %>
  <%= f.input :first_name, label: "First Name" %>
  <%= f.input :family_name, label: "Family Name" %>
  <%= f.input :dob, label: "Date of Birth", as: :string, input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :dod, label: "Date of Death", as: :string, input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :biography, as: :text, label: "A Brief Biography" %>
  <%= f.input :photo, as: :file, label: "Please add a profile picture" %>
  <%= f.button :submit %>
<% end %>
